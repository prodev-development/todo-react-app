{
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended",
    "prettier",
    // Make sure this is the last one to disable conflicting rules
    "plugin:prettier/recommended"
  ],
  "parserOptions": {
    "ecmaVersion": 2020,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "env": {
    "browser": true,
    "es6": true,
    "node": true
  },
  "plugins": [
    "react",
    "prettier"
  ],
  "rules": {
    "prettier/prettier": "error",
    // Treat Prettier errors as ESLint errors
    "react/prop-types": "off",
    // Example of turning off React-specific rules
    "no-console": "warn"
    // Example of a custom rule
  }
}
